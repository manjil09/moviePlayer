<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.MovieApp" parent="Base.Theme.MovieApp" />

    <style name="SplashTheme" parent="Theme.MovieApp">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.FilledBox.Dense" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputEditText.FilledBox.Dense</item>
    </style>

    <style name="LoginEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
    </style>

    <style name="SearchEditText" parent="LoginEditText">
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:hint">@string/search</item>
        <item name="dividerPadding">12dp</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
    </style>

    <style name="TabLayoutText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="tabTextAppearance">@style/TabLayoutText</item>
        <item name="tabIndicatorColor">@color/bright_red</item>
        <item name="tabSelectedTextColor">@color/bright_red</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">start</item>
    </style>

    <style name="Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="SubTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Description">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
</resources>